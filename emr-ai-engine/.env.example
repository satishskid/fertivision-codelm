# EMR AI Engine Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DEPLOYMENT MODE
# =============================================================================
# Set to 'true' for local-only deployment (privacy-first)
LOCAL_MODE=false

# Set to 'true' for cloud-enabled deployment (scalability-first)
CLOUD_MODE=true

# Performance mode: 'optimized' | 'balanced' | 'cost-effective'
PERFORMANCE_MODE=optimized

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Optional: Custom Clerk configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# CLOUD AI PROVIDERS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_organization_id_here

# Groq Configuration (Ultra-fast inference)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# =============================================================================
# LOCAL AI PROVIDERS
# =============================================================================

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=llama3.2:3b,phi3.5:mini,biogpt:base

# Local Model Paths
LOCAL_MODELS_PATH=./models
ONNX_MODELS_PATH=./models/onnx
HUGGINGFACE_CACHE_DIR=./models/huggingface

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/emr_ai_engine

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache configuration
CACHE_TTL=1800
CACHE_MAX_SIZE=10000
ENABLE_CACHE=true

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# HIPAA Compliance
HIPAA_COMPLIANT_MODE=true
DATA_ENCRYPTION_KEY=your_32_character_encryption_key_here
AUDIT_LOGGING_ENABLED=true

# API Security
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application monitoring
SENTRY_DSN=https://your_sentry_dsn_here
ENABLE_ERROR_TRACKING=true

# Analytics
GOOGLE_ANALYTICS_ID=GA-your_analytics_id_here
ENABLE_USAGE_ANALYTICS=true

# Prometheus metrics
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=9090

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================

# Email configuration (for alerts and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@yourdomain.com

# Webhook notifications
WEBHOOK_URL=https://your-webhook-url.com/notifications
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# TRAINING ACADEMY
# =============================================================================

# Hugging Face Hub integration
HF_HUB_CACHE=./models/huggingface_hub
HF_DATASETS_CACHE=./datasets
ENABLE_DATASET_DOWNLOAD=true

# Training configuration
TRAINING_DATA_PATH=./training_data
MODEL_CHECKPOINTS_PATH=./checkpoints
ENABLE_FINE_TUNING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode
NODE_ENV=development
DEBUG=true
VERBOSE_LOGGING=true

# Hot reload and development features
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=false
DISABLE_TYPE_CHECK=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production optimizations (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false
# ENABLE_COMPRESSION=true
# ENABLE_CDN=true

# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# FORCE_HTTPS=true

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom API endpoints
CUSTOM_API_BASE_URL=https://your-custom-api.com
CUSTOM_API_KEY=your_custom_api_key_here

# Feature flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true

# Backup and recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker-specific settings
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
CONTAINER_PORT=3000

# Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes deployment settings
K8S_NAMESPACE=emr-ai-engine
K8S_SERVICE_ACCOUNT=emr-ai-service-account
K8S_INGRESS_CLASS=nginx

# Resource limits
MEMORY_LIMIT=2Gi
CPU_LIMIT=1000m
MEMORY_REQUEST=1Gi
CPU_REQUEST=500m
