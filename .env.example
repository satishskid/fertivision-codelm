# FertiVision Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Default API Provider (demo, groq, openrouter)
VITE_API_PROVIDER=demo

# API Keys (set these in Netlify dashboard for production)
# VITE_GROQ_API_KEY=your_groq_api_key_here
# VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default Model Selection
VITE_MODEL=demo-analysis

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development, staging, production)
NODE_ENV=production

# Application Version
VITE_APP_VERSION=1.0.0

# Build Date (automatically set during build)
VITE_BUILD_DATE=2025-01-13

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy settings
VITE_CSP_ENABLED=true

# API Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=3600

# =============================================================================
# NETLIFY SPECIFIC SETTINGS
# =============================================================================

# Netlify Site ID (set automatically by Netlify)
# NETLIFY_SITE_ID=your_site_id

# Netlify Deploy Context (production, deploy-preview, branch-deploy)
# CONTEXT=production

# Branch name (set automatically by Netlify)
# BRANCH=main

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (only for development)
VITE_DEBUG=false

# Mock mode (use demo data instead of real API calls)
VITE_MOCK_MODE=true

# Local development server port
VITE_DEV_PORT=3000

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics (optional)
# VITE_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Sentry Error Reporting (optional)
# VITE_SENTRY_DSN=your_sentry_dsn

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Groq API Configuration
VITE_GROQ_BASE_URL=https://api.groq.com/openai/v1
VITE_GROQ_DEFAULT_MODEL=llava-v1.5-7b-4096-preview

# OpenRouter API Configuration
VITE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
VITE_OPENROUTER_DEFAULT_MODEL=google/gemini-pro-vision

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Image processing settings
VITE_MAX_IMAGE_SIZE=10485760
VITE_SUPPORTED_FORMATS=image/jpeg,image/png,image/webp

# Request timeout (milliseconds)
VITE_REQUEST_TIMEOUT=60000

# Retry settings
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY=1000

# =============================================================================
# UI SETTINGS
# =============================================================================

# Default theme
VITE_DEFAULT_THEME=light

# Language settings
VITE_DEFAULT_LANGUAGE=en

# Accessibility settings
VITE_HIGH_CONTRAST=false
VITE_REDUCED_MOTION=false

# =============================================================================
# MEDICAL COMPLIANCE
# =============================================================================

# HIPAA compliance mode
VITE_HIPAA_COMPLIANCE=true

# Data retention settings (days)
VITE_DATA_RETENTION_DAYS=30

# Audit logging
VITE_AUDIT_LOGGING=true

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Base URL for the application
VITE_BASE_URL=/

# CDN URL for static assets (optional)
# VITE_CDN_URL=https://cdn.example.com

# Asset optimization
VITE_OPTIMIZE_IMAGES=true
VITE_MINIFY_CSS=true
VITE_MINIFY_JS=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Automatic backup settings
VITE_AUTO_BACKUP=true
VITE_BACKUP_INTERVAL=3600000

# Local storage settings
VITE_LOCAL_STORAGE_QUOTA=50MB

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Push notifications (if implemented)
VITE_ENABLE_NOTIFICATIONS=false

# Email notifications (if implemented)
VITE_ENABLE_EMAIL_NOTIFICATIONS=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# EMR Integration endpoints (if needed)
# VITE_EMR_WEBHOOK_URL=https://your-emr-system.com/webhook

# Third-party integrations
VITE_ENABLE_THIRD_PARTY_INTEGRATIONS=false

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Test mode settings
VITE_TEST_MODE=false
VITE_MOCK_API_RESPONSES=true

# Sample data settings
VITE_INCLUDE_SAMPLE_DATA=true

# =============================================================================
# DOCUMENTATION
# =============================================================================

# Help and documentation URLs
VITE_DOCS_URL=https://github.com/satishskid/fertivision-codelm
VITE_SUPPORT_EMAIL=support@greybrain.ai

# =============================================================================
# LEGAL AND COMPLIANCE
# =============================================================================

# Terms of service and privacy policy URLs
VITE_TERMS_URL=/terms
VITE_PRIVACY_URL=/privacy

# Copyright information
VITE_COPYRIGHT_YEAR=2025
VITE_COPYRIGHT_HOLDER=greybrain.ai

# =============================================================================
# NOTES
# =============================================================================

# 1. For production deployment on Netlify:
#    - Set API keys in Netlify dashboard under Site Settings > Environment Variables
#    - Never commit real API keys to version control
#    - Use VITE_ prefix for variables that should be available in the browser
#
# 2. For local development:
#    - Copy this file to .env
#    - Set your actual API keys
#    - The .env file is ignored by git for security
#
# 3. Environment variable precedence:
#    - Netlify dashboard settings (highest priority)
#    - .env file
#    - Default values in code (lowest priority)
